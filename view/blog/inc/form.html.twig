<form action="" method="post" class="text-center">

    {# CSRF #}
    <input type="hidden" name="csrf_token" value="{{ blog.getCsrfToken }}" />

    {# Si on est en édition, alors ID est défini #}
    {% if blogpost.id %}
        <input type="hidden" name="id" value="{{ blogpost.id }}" />
        {% set btnText = "Save my changes" %}
    {% else %}
        {% set btnText = "Publish" %}
    {% endif %}

    <div class="container">
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label>Title</label>
                <input type="text" class="form-control" placeholder="Title" name="title" value="{{ blogpost.title }}" required data-validation-required-message="Please fill in with a valid title." maxlength="255">
                <p class="help-block text-danger">{{ errors.title }}</p>
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label>Lead-in</label>
                <input type="text" class="form-control" placeholder="Lead-in " name="header" value="{{ blogpost.header }}" data-validation-required-message="Please fill in with a valid lead-in." maxlength="255">
                <p class="help-block text-danger">{{ errors.header }}</p>
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label>Author</label>
                <input type="text" class="form-control" placeholder="Author" name="author" value="{{ blogpost.author.username }}" required data-validation-required-message="Please fill in with your name." maxlength="255">
                <p class="help-block text-danger">{{ errors.author }}</p>
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label>Content</label>
                <textarea rows="5" class="form-control" placeholder="Content" name="content" required data-validation-required-message="Please write your content.">{{ blogpost.content }}</textarea>
                <p class="help-block text-danger">{{ errors.content }}</p>
            </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="row">
            <div class="form-group col-xs-12">
                <button type="submit" class="btn btn-default">{{ btnText }}</button>
            </div>
        </div>
    </div>
</form>